rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated and matches userId
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only read/write their own chats
    match /users/{userId}/chats/{chatId} {
      // Allow read/write if authenticated and the userId matches
      allow read, write: if isOwner(userId);
      
      // Messages within a chat
      match /messages/{messageId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Allow users to query their own chats collection (for list operations)
    // This is needed for getDocs() queries on the collection
    match /users/{userId}/chats {
      allow read, write: if isOwner(userId);
    }
    
    // Progress tracking - Allow users to query their own progress collection
    match /users/{userId}/progress {
      allow read, write: if isOwner(userId);
    }
    
    // Progress tracking - users can only read/write their own progress
    match /users/{userId}/progress/{topicId} {
      allow read, write: if isOwner(userId);
      
      // Attempts within a topic
      match /attempts/{attemptId} {
        allow read, write: if isOwner(userId);
      }
      
      // Aggregated progress within a topic
      match /aggregated/{aggregatedId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Achievements - users can only read/write their own achievements
    match /users/{userId}/achievements/{achievementId} {
      allow read, write: if isOwner(userId);
    }
    
    // Achievements collection query
    match /users/{userId}/achievements {
      allow read, write: if isOwner(userId);
    }
    
    // Sessions - users can only read/write their own sessions
    match /users/{userId}/sessions/{sessionId} {
      allow read, write: if isOwner(userId);
    }
    
    // Sessions collection query
    match /users/{userId}/sessions {
      allow read, write: if isOwner(userId);
    }
  }
}